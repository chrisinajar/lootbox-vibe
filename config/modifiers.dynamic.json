{
  "$schema": "https://lootboxsim/schemas/modifiers.dynamic.v1.json",
  "version": 1,
  "modifiers": [
    {
      "id": "d_greedy",
      "name": "Greedy",
      "appliesOn": ["SALVAGE_VALUE_PRE_CREDIT", "UI_VALUE_PREVIEW"],
      "formula": {
        "type": "LINEAR_PER_COUNTER",
        "counter": "lifetime_opens",
        "per": 100,
        "pctPerStep": 1,
        "capPct": 100
      }
    },
    {
      "id": "d_lucky",
      "name": "Lucky",
      "appliesOn": ["OPEN_BOXES_CURRENCY_STEP"],
      "formula": {
        "type": "LINEAR_PER_COUNTER",
        "counter": "lifetime_opens",
        "per": 1000,
        "bpPerStep": 10,
        "capBp": 500
      },
      "payout": { "type": "BONUS_KEYS", "maxPerRequest": 1 }
    }
  ]
}
