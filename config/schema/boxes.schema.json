{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/boxes.schema.json",
  "title": "Boxes schema",
  "type": "object",
  "definitions": {
    "box": {
      "type": "object",
      "required": ["id", "name", "entries"],
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "entries": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["itemId", "weight"],
            "properties": {
              "itemId": { "type": "string" },
              "weight": { "type": "number", "minimum": 0 }
            },
            "additionalProperties": false
          }
        },
        "keyCost": { "type": "number", "minimum": 0 },
        "selfDropCap": { "type": "number", "minimum": 0 },
        "forbidSelfDrop": { "type": "boolean" }
      },
      "additionalProperties": false
    }
  }
}
