{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lootboxsim/schemas/materials.json",
  "title": "Materials catalog v1",
  "type": "object",
  "properties": {
    "$schema": { "type": "string" },
    "version": { "type": "integer", "minimum": 1 },
    "materials": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "description", "iconId", "rarity", "stackable", "scrapValue"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "iconId": { "type": "string" },
          "rarity": {
            "type": "string",
            "enum": ["COMMON", "UNCOMMON", "RARE", "EPIC", "LEGENDARY", "MYTHIC"]
          },
          "stackable": { "type": "boolean" },
          "scrapValue": { "type": "integer", "minimum": 0 }
        },
        "additionalProperties": false
      }
    }
  },
  "required": ["version", "materials"],
  "additionalProperties": false
}
