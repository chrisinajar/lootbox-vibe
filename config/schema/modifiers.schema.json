{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/modifiers.schema.json",
  "title": "Modifiers schema",
  "type": "object",
  "properties": {
    "static": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "category"],
        "properties": {
          "id": { "type": "string" },
          "desc": { "type": "string" },
          "filterable": { "type": "boolean" },
          "category": { "type": "string", "enum": ["COSMETIC", "MECHANICAL"] },
          "economic": {
            "type": "object",
            "description": "Economic effect settings only allowed for MECHANICAL mods",
            "properties": {
              "scrapYieldMult": { "type": "number" },
              "keyBonusChance": { "type": "number" }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false,
        "allOf": [
          {
            "not": {
              "allOf": [
                { "properties": { "category": { "const": "COSMETIC" } } },
                { "properties": { "economic": {} }, "required": ["economic"] }
              ]
            }
          }
        ]
      }
    },
    "dynamic": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id"],
        "properties": { "id": { "type": "string" }, "desc": { "type": "string" } }
      }
    }
  },
  "additionalProperties": false
}
