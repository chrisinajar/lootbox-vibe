{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/items.schema.json",
  "title": "Items schema",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["id", "name", "rarity"],
    "properties": {
      "id": { "type": "string" },
      "name": { "type": "string" },
      "rarity": { "type": "string", "enum": ["common", "uncommon", "rare", "epic", "legendary"] }
    },
    "additionalProperties": false
  }
}
