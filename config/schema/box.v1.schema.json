{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lootboxsim/schemas/box.v1.json",
  "title": "Single box v1",
  "type": "object",
  "required": ["id", "name", "tier", "keyCost", "dropTable"],
  "properties": {
    "id": { "type": "string" },
    "name": { "type": "string" },
    "tier": { "type": "integer", "minimum": 1 },
    "keyCost": { "type": "integer", "minimum": 0 },
    "forbidSelfDrop": { "type": "boolean" },
    "selfDropCap": { "type": "integer", "minimum": 0 },
    "dropTable": {
      "type": "object",
      "required": ["rolls", "entries"],
      "properties": {
        "rolls": { "type": "integer", "minimum": 1 },
        "entries": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["type", "weight"],
            "properties": {
              "type": { "type": "string", "enum": ["ITEM", "CURRENCY", "BOX", "MATERIAL"] },
              "weight": { "type": "integer", "minimum": 0 },
              "itemId": { "type": "string" },
              "rarity": { "type": "string" },
              "staticModsPool": { "type": "array", "items": { "type": "string" } },
              "currency": { "type": "string" },
              "amount": {
                "oneOf": [
                  { "type": "integer" },
                  {
                    "type": "object",
                    "properties": { "min": { "type": "integer" }, "max": { "type": "integer" } },
                    "required": ["min", "max"],
                    "additionalProperties": false
                  }
                ]
              },
              "boxId": { "type": "string" },
              "count": {
                "oneOf": [
                  { "type": "integer" },
                  {
                    "type": "object",
                    "properties": { "min": { "type": "integer" }, "max": { "type": "integer" } },
                    "required": ["min", "max"],
                    "additionalProperties": false
                  }
                ]
              },
              "materialId": { "type": "string" }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}

