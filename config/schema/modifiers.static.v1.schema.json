{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lootboxsim/schemas/modifiers.static.v1.json",
  "title": "Static modifiers v1",
  "type": "object",
  "properties": {
    "$schema": { "type": "string" },
    "version": { "type": "integer", "minimum": 1 },
    "modifiers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "category"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "category": { "type": "string", "enum": ["COSMETIC", "MECHANICAL"] },
          "effect": {
            "type": "object",
            "properties": {
              "type": { "type": "string" },
              "valuePct": { "type": "number" },
              "valueBp": { "type": "number" },
              "charges": { "type": "integer" },
              "value": { "type": "number" },
              "per": { "type": "number" },
              "amount": { "type": "number" },
              "valueX": { "type": "number" }
            },
            "additionalProperties": true
          }
        },
        "additionalProperties": false,
        "allOf": [
          {
            "not": {
              "allOf": [
                { "properties": { "category": { "const": "COSMETIC" } } },
                { "properties": { "effect": {} }, "required": ["effect"] }
              ]
            }
          }
        ]
      }
    }
  },
  "required": ["version", "modifiers"],
  "additionalProperties": false
}
